{
  "manifest_version": 3,
  "name": "클래스터 - 통합 버전",
  "version": "2.0",
  "description": "클래스팅 자동 매크로 및 총괄평가",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://www.classting.com/*",
    "https://clapi.classting.com/*",
    "https://ai.classting.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://ai.classting.com/*"],
      "js": ["content.js"]
    }
  ]
}
